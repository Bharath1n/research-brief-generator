{
  "version": 2,
  "builds": [
    {
      "src": "app/api.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 60,
        "memory": 2048,
        "includeFiles": ["app/**", "requirements.txt"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app/api.py"
    }
  ]
}